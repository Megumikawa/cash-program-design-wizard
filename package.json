{
  "name": "cash-program-design-wizard",
  "homepage": "https://github.com/rodekruis/cash-program-design-wizard#readme",
  "scripts": {
    "fix:syntax": "npm run lint -- --write",
    "lint": "prettier --check --ignore-unknown './{*,!(client/*),!(server/*)}'",
    "test": "npm-run-all --print-label --sequential lint test:client test:server",
    "test:client": "npm test --workspace client",
    "test:server": "npm test --workspace server",
    "start": "npm-run-all --print-label --parallel start:client start:server",
    "start:client": "npm start --workspace client",
    "start:server": "npm-run-all --print-label --parallel start:service start:database",
    "start:service": "npm run start:dev --workspace server",
    "start:database": "cd server && docker-compose --project-directory .. up -d --build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rodekruis/cash-program-design-wizard.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/rodekruis/cash-program-design-wizard/issues"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "engines": {
    "node": "^16.6.1",
    "npm": "^7.20.3"
  },
  "devDependencies": {
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "prettier-plugin-organize-imports": "^2.3.3"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
